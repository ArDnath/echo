{
  "name": "echo-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "copy-prisma": "rm -rf src/generated && mkdir -p src/generated && cp -r ../echo-control/src/generated/prisma src/generated/",
    "copy-prisma-to-dist": "mkdir -p dist/generated && cp -r src/generated/prisma dist/generated/",
    "prebuild": "pnpm run copy-prisma",
    "predev": "pnpm run copy-prisma",
    "prestart": "pnpm run copy-prisma",
    "dev": "ts-node src/server.ts",
    "start": "node dist/server.js",
    "client": "ts-node src/client.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "tsc && pnpm run copy-prisma-to-dist",
    "lint": "pnpx eslint src/**/*.ts --no-warn-ignored",
    "lint:fix": "pnpx eslint src/**/*.ts --no-warn-ignored --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/**/*.{ts,js}",
    "format:check": "prettier --check src/**/*.{ts,js}"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@types/node-fetch": "^2.6.11",
    "@zdql/echo-typescript-sdk": "file:../echo-typescript-sdk",
    "compression": "^1.8.0",
    "dotenv": "^16.5.0",
    "express": "^4.18.3",
    "node-fetch": "^2.7.0",
    "openai": "^4.97.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.3.2"
  }
}
