{
  "name": "@merit-systems/echo-next-sdk",
  "version": "1.0.0",
  "description": "Next.js SDK for Echo",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "pnpx eslint src/**/*.ts",
    "lint:fix": "pnpx eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest --watch",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "echo",
    "typescript",
    "sdk",
    "api"
  ],
  "author": "Merit Systems",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.5",
    "@ai-sdk/openai": "^2.0.16",
    "@merit-systems/echo-typescript-sdk": "workspace:*",
    "ai": "^5.0.17",
    "jwt-decode": "^4.0.0"
  },
  "peerDependencies": {
    "next": ">=15.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "next": "^15.1.4",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  },
  "files": [
    "dist/**/*"
  ]
}
