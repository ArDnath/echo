{
  "name": "@echo/typescript-sdk",
  "version": "1.0.0",
  "description": "TypeScript SDK for Echo platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "echo-cli": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern='(auth|client).test.ts'",
    "test:cli": "jest --testPathPattern='cli.test.ts'",
    "test:integration": "jest --testPathPattern='integration.test.ts'",
    "test:all": "npm run test:unit && npm run test:cli && npm run test:integration",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["echo", "typescript", "sdk", "api"],
  "author": "Echo Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "commander": "^11.0.0",
    "inquirer": "^9.2.0",
    "open": "^9.1.0",
    "keytar": "^7.9.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/inquirer": "^9.0.0",
    "@types/express": "^4.17.21",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist/**/*"
  ]
} 