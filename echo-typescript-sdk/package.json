{
  "name": "@zdql/echo-typescript-sdk",
  "version": "1.0.10",
  "description": "TypeScript SDK for Echo platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "echo-cli": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "pnpx eslint src/**/*.ts",
    "lint:fix": "pnpx eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/**/*.{ts,js}",
    "format:check": "prettier --check src/**/*.{ts,js}",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern='(auth|client).test.ts'",
    "test:cli": "jest --testPathPattern='cli.test.ts'",
    "test:integration": "jest --testPathPattern='integration.test.ts'",
    "test:all": "pnpm run test:unit && pnpm run test:cli && pnpm run test:integration",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "echo",
    "typescript",
    "sdk",
    "api"
  ],
  "author": "Echo Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "inquirer": "^9.2.0",
    "open": "^9.1.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/inquirer": "^9.0.8",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "dotenv": "^16.5.0",
    "eslint": "^9.29.0",
    "express": "^5.1.0",
    "jest": "^30.0.0",
    "jest-util": "^30.0.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist/**/*"
  ]
}
