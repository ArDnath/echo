{
  "name": "create-echo-app",
  "version": "1.0.0",
  "description": "Create LLM chatbot applications using Vercel AI SDK",
  "main": "dist/index.js",
  "bin": {
    "create-echo-app": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "pnpm run type-check && echo 'All tests passed!'",
    "lint": "pnpx eslint src/**/*.ts",
    "lint:fix": "pnpx eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,js}\"",
    "format:check": "prettier --check \"**/*.{ts,js}\"",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "react",
    "ai",
    "chatbot",
    "llm",
    "vercel",
    "ai-sdk",
    "template",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^8.2.6",
    "validate-npm-package-name": "^5.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^24.0.3",
    "@typescript-eslint/parser": "^8.34.1",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist/**/*",
    "templates/**/*"
  ],
  "engines": {
    "node": ">=16.0.0"
  }
}
